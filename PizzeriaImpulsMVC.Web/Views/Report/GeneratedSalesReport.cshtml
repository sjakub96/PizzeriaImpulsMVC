@model PizzeriaImpulsMVC.Application.ViewModels.Report.ListGeneratedSalesReportVm

<h1>
    Sales report
</h1>

<br />

<a asp-controller="Report" asp-action="GenerateXLSX" class="btn btn-success">Generate XLSX</a>
<a asp-controller="Report" asp-action="GenerateCSV" class="btn btn-success">Generate CSV</a>
<a asp-controller="Report" asp-action="GeneratePDF" class="btn btn-danger">Generate PDF</a>
<br />

<div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        UserName
                    </th>
                    <th>
                        Price [$]
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Rows)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                    </tr>
            }
            </tbody>
        </table>
</div>
