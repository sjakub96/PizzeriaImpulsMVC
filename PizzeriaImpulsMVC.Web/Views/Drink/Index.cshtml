@model PizzeriaImpulsMVC.Application.ViewModels.Drink.ListDrinkForListVm

<h1>
    Drinks
</h1>

<p>
    <a asp-action="AddDrink" class="btn btn-success">Add Drink</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price [zł]
            </th>
            <th>
                Size [l]
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drinks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            
            <td>
                <a asp-controller="Drink" asp-action="EditDrink" asp-route-drinkId="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Drink" asp-action="DrinkDetails" asp-route-drinkId="@item.Id" class="btn btn-info">Details</a>
                <a asp-controller="Drink" asp-action="DeleteDrink" asp-route-drinkId="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
