<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzeriaImpulsMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzeriaImpulsMVC.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>               
            </div>
        </nav>
   
    </header>
    <div class="side-nav">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">PizzeriaImpulsMVC</a>
            <ul class="nav-links">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Pizza" asp-action="Index">Pizzas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Component" asp-action="Index">Components</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Addition" asp-action="Index">Additions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Drink" asp-action="Index">Drinks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="UserManagment" asp-action="Index">User Managment</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <partial name="_LoginPartial" />
            </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p>&copy; 2021 - PizzeriaImpulsMVC.Web</p>
        </div>
    </footer>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PizzeriaImpulsMVC.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
