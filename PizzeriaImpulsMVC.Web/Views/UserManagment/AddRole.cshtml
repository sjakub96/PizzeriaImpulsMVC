@model PizzeriaImpulsMVC.Application.ViewModels.UserManagment.NewRoleVm

<h1>
    Create Role
</h1>
<h5>
    Complete the form to create a new role
</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="GetRoles" class="btn btn-secondary">Back to List</a>
</div>
