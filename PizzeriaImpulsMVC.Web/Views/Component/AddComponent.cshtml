@model PizzeriaImpulsMVC.Application.ViewModels.Component.NewComponentVm

<h1>
    Create Component
</h1>
<h5>
    Complete the form to create a new component
</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComponent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-switch">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMeat" /> @Html.DisplayNameFor(model => model.IsMeat)
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

